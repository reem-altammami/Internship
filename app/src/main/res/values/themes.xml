<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Internship" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4A5377</item>
        <item name="colorPrimaryVariant">#333649</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

    </style>

    <style name="Theme.Internship.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Internship.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Internship.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Internship.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Internship.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Internship.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="home_background">
        <item name="android:background">#F4F4F4</item>
    </style>
    <style name="card">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="profile_background">
        <item name="android:background">#A9ADBF</item>
    </style>

</resources>